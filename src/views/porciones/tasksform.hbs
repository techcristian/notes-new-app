<div class="card card-body p-4 rounded- bg-dark text-white">
  <div class="d-flex text-align-items justify-content-center">
    <h3 class="animate__animated animate__fadeInLeftBig" >Add a Task</h3>
    
  </div>
  
      <img class="animate__animated animate__fadeInDownBig"  src="/img/buda2.JPEG" />
  
 

  <form action="/tasks/add" method="POST">

    <div>
      <div>
        <label for="title">Title:</label>
        <input
          type="text"
          name="title"
          id="title"
          placeholder="title"
          class="form-control rounded-0 bg-dark text-white"
        />
      </div>
    </div>

    <div>
      <div>
        <lable for="description">Description:</lable>
        <textarea
          name="description"
          id="description"
          placeholder="description"
          class="form-control rounded-0 bg-dark text-white"
        ></textarea>
      </div>
    </div>

    <button type="submit" class="btn btn-dark mt-2 boton">
      SAVE
    </button>

  </form>

</div>